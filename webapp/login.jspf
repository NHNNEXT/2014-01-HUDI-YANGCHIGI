<form id="loginForm" action="login" method="post" class="form-inline"
	role="form">
	<div id="emailDiv">
		<input type="email"
			name="email" class="form-control" placeholder="Enter email" />
	</div>
	<div id="passwordDiv">
		<input type="password"
			name="password" class="form-control" placeholder="Password" />
	</div>
	<button type="button" id="loginBtn" class="btn btn-default"
		data-toggle="popover" data-placement="bottom">Sign in</button>
</form>